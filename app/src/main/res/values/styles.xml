<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>



    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/borde_spinner</item>
        <item name="android:textColor">#808080</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:padding">10dp</item>

    </style>


    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/dane</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="menu_text_style">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>
    <style name="Etiquetas">
        <item name="android:background">@drawable/background_label_fab</item>
        <item name="android:textColor">@color/blanco</item>
    </style>
    <style name="iconGenText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FF0114</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.3</item>
        <item name="android:shadowRadius">1.6</item>
    </style>
    <style name="iconGenTextLinea">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#19FF45</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.3</item>
        <item name="android:shadowRadius">1.6</item>
    </style>
    <style name="iconGenTextENA">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#56D5FF</item>
    </style>
    <style name="titulo" parent="@android:style/Widget.TextView">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/dane</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="btn_rojo" parent="@android:style/Widget.Button">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:background">@drawable/borde_button</item>
    </style>
</resources>
