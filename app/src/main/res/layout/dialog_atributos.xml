<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:text="Edición de atributos"
        android:textColor="@color/dane"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo de novedad:"
                android:textSize="15sp"
                android:layout_weight="2"

                />

            <Spinner
                android:id="@+id/tipo_novedad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />


        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Descripcion:"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/descripcion_novedad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Descripción"
                android:inputType="textMultiLine"
                android:lines="4"
                android:textSize="15sp" />



        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_dialog_guardar_atributos"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:background="@drawable/borde_boton"
        android:backgroundTint="@color/azul"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:text="Guardar"
        android:textColor="@color/blanco"
        android:layout_marginBottom="20dp"/>
</LinearLayout>