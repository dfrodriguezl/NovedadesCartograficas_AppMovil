<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="Sincronizaci贸n de datos"
        android:textSize="20sp"
        android:textColor="@color/dane"
        android:layout_marginTop="20dp"
        android:paddingBottom="12dp"/>


    <TextView
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="M贸dulo de sincronizaci贸n de datos, asegurese de tener una conexi贸n a internet."
        android:textSize="17sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"

        >


        <Button
            android:id="@+id/subir_cambios_sincronizacion"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subir Datos"
            android:background="@drawable/boton_verde"
            android:textColor="@color/blanco"
            android:layout_margin="10dp"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button
            android:id="@+id/descargar_datos_nube"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descargar datos"
            android:background="@drawable/borde_boton_dane"
            style="?android:attr/borderlessButtonStyle"

            android:layout_margin="10dp"

            />


    </LinearLayout>


    <Button
        android:id="@+id/btn_dialog_sincronizar_close"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Cerrar"

        android:layout_margin="10dp"
        style="?android:attr/borderlessButtonStyle"

        android:textColor="@color/dane"
        />



    <TextView
        android:id="@+id/mensaje_sincronizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textColor="@color/azul"
        android:textSize="17sp" />

</LinearLayout>