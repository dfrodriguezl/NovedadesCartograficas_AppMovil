<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">


        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            >


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_mini_header"
                />


            <TextView
                android:id="@+id/aviso_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dane"
                android:padding="10dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                android:textSize="25dp"
                android:text="Inicio de Sesión" />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="10dp"
                android:background="@drawable/borde_input_text"
                android:hint="Usuario"
                android:drawableLeft="@drawable/ic_user"
                android:drawableTint="@color/gris"
                android:drawablePadding="5dp"
                />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginVertical="20dp"
                android:background="@drawable/borde_input_text"
                android:drawableLeft="@drawable/ic_key_login"
                android:drawablePadding="5dp"
                android:drawableTint="@color/gris"
                android:hint="Clave"
                android:inputType="textPassword"
                android:padding="10dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:layout_marginBottom="5dp"
                android:text="Seleccione la investigación a la que pertenece." />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="10dp"
                android:background="@drawable/borde_spinner"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner_investigacion"
                    android:layout_width="match_parent"

                    android:layout_height="match_parent" />
            </LinearLayout>


            <Button
                android:id="@+id/btn_login"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:background="@drawable/boton_verde"
                android:textColor="@color/blanco"
                android:drawableTint="@color/colorPrimary"
                android:text="Ingresar"
                />



        </LinearLayout>



    </RelativeLayout>






</LinearLayout>