<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <android.support.design.widget.AppBarLayout

            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:background="@color/colorPrimary">


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/map_type_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100px"
                    android:visibility="gone"
                    android:entries="@array/map_types_list" />

            </android.support.v7.widget.Toolbar>


        </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_main" />
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/save_edicion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:backgroundTint="@color/verde"
        app:srcCompat="@drawable/ic_main_save_editor" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/discard_save_editor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="75dp"
        android:layout_marginBottom="15dp"
        app:backgroundTint="@color/rojo"
        app:srcCompat="@drawable/ic_main_discard_editor" />




    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_punto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        app:backgroundTint="@color/dane"
        android:layout_marginBottom="15dp"
        app:srcCompat="@drawable/ic_editar_punto" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/delete_geom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        app:backgroundTint="@color/dane"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        app:srcCompat="@drawable/ic_main_delete_forever" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/undo_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        app:backgroundTint="@color/dane"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="15dp"
        app:srcCompat="@drawable/ic_main_undo" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/cut_geom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        app:backgroundTint="@color/dane"
        android:layout_marginBottom="150dp"
        android:layout_marginLeft="15dp"
        app:srcCompat="@drawable/ic_main_cut" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/edit_atributos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        app:backgroundTint="@color/dane"
        android:layout_marginBottom="220dp"
        android:layout_marginLeft="15dp"
        app:srcCompat="@drawable/ic_main_atributos" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/edit_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        app:backgroundTint="@color/dane"
        android:layout_marginBottom="300dp"
        android:layout_marginLeft="15dp"
        app:srcCompat="@drawable/ic_main_join" />

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/menu_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center"
        app:fab_addButtonColorNormal="@color/dane"
        app:fab_addButtonSize="normal"
        app:fab_labelStyle="@style/Etiquetas"
        app:fab_labelsPosition="left">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/editarPolygono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/amarrillo"
            app:fab_icon="@drawable/ic_editar_polygono"
            app:fab_size="normal"
            app:fab_title="Poligono" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/editarLinea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/verde"
            app:fab_icon="@drawable/ic_editar_linea"
            app:fab_size="normal"
            app:fab_title="Linea" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/editarPunto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/azul"
            app:fab_icon="@drawable/ic_editar_punto"
            app:fab_size="normal"
            app:fab_title="Punto" />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>









</android.support.design.widget.CoordinatorLayout>