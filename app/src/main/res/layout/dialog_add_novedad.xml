<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialogo_mapa_base"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de Geometria por adicionar."
            android:textColor="@color/dane"
            android:textSize="20sp"
            android:padding="10dp"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Novedades CartogrÃ¡ficas"
            android:padding="5dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/borde_boton"
                android:id="@+id/novedad_punto">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    app:srcCompat="@drawable/novedad_punto" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Punto" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/borde_boton"
                android:id="@+id/novedad_linea">

                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    app:srcCompat="@drawable/novedad_linea" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Linea" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/borde_boton"
                android:id="@+id/novedad_poligono">

                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    app:srcCompat="@drawable/novedad_poligono" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Poligono" />

            </LinearLayout>




        </LinearLayout>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Geometrias de CEED"
            android:padding="5dp"
            />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="@drawable/borde_boton"
            android:id="@+id/adicionar_obra">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="44dp"
                app:srcCompat="@drawable/novedad_obra" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="O. Proyectada" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="@drawable/borde_boton"
            android:id="@+id/adicionar_ruta_ceed">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="44dp"
                app:srcCompat="@drawable/novedad_ruta" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Recorrido" />


        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

</RelativeLayout>